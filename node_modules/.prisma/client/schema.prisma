datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model organizations {
  org_id     String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name       String
  type_id    Int
  plan_id    Int
  user_id    String? // เปลี่ยนเป็น string, optional ถ้าต้องการ
  created_at DateTime? @default(now())

  type organization_types @relation(fields: [type_id], references: [type_id])
  plan organization_plans @relation(fields: [plan_id], references: [plan_id])

  @@map("organizations")
}

model organization_types {
  type_id     Int     @id @default(autoincrement())
  type_name   String  @unique
  description String? // nullable

  organizations organizations[]

  @@map("organization_types")
}

model organization_plans {
  plan_id     Int     @id @default(autoincrement())
  plan_name   String  @unique
  description String? // nullable

  organizations organizations[]

  @@map("organization_plans")
}

model categories {
  id         Int       @id @default(autoincrement())
  name       String    @db.VarChar(50)
  created_at DateTime? @default(now())

  @@map("categories")
}

model users {
  id         Int       @id @default(autoincrement())
  email      String    @unique @db.VarChar(255)
  password   String    @db.VarChar(255)
  name       String    @db.VarChar(100)
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  @@map("users")
}
